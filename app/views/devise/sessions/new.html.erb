<!-- app/views/devise/sessions/new.html.erb -->

<h2 class="text-center mb-4">Sign In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
  <div class="form-group mt-5">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Email address", autofocus: true, required: true %>
  </div>

  <div class="form-group mt-5">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
  </div>

  <div class="form-group form-check mt-5">
    <%= f.check_box :remember_me, class: "form-check-input" %>
    <%= f.label :remember_me, class: "form-check-label" %>
  </div>

  <div class="form-group mt-5">
    <%= f.submit "Sign In", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
