<h2 class="text-center mb-4">Forgot Your Password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-password" }) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Email address", autofocus: true, required: true %>
  </div>

  <div class="form-group  mt-5">
    <%= f.submit "Send Reset Instructions", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
